{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Bazel build",
            "preLaunchTask": "build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/decoder_main",
            "args": [
                "--model_path=${workspaceFolder}/wavegru",
                "--output_dir=$HOME/temp",
                "--encoded_path=$HOME/temp/16khz_sample_000001.lyra"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bazel-bin/decoder_main.runfiles/__main__/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "sourceFileMap": {"/proc/self/cwd":"${workspaceFolder}"}, // https://gitter.im/vscode-lldb/QnA?at=5e30bb93594a0517c2407b11
            "miDebuggerArgs": "-q -ex quit; wait() { fg >/dev/null; }; /bin/gdb -q --interpreter=mi", // https://github.com/microsoft/vscode-cpptools/issues/3298
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        },
    ]
}